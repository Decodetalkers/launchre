pkgname=utena-launcher
pkgver=0.1
pkgrel=1.0
pkgdesc='Revolution Now'
arch=('x86_64' 'aarch64')
url='https://github.com/Decodetalkers/launchre'
license=('MIT')
depends=('qt5-base')
makedepends=('git' 'ninja' 'meson' 'rust')
source=('source.tar.gz')
sha512sums=('SKIP')

build() {
  meson setup \
    -Dprefix=/usr \
    -Dbuildtype=release \
    build
  ninja -C build
}

package() {
  DESTDIR="$pkgdir" ninja -C build install
}
